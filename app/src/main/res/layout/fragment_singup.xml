<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ecp.gsy.dcs.zirkapp.app.fragments.loginSignup.SignupFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_primary_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="16dp"
            android:text="@string/lblCreateCount"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_primary_color"
            android:textStyle="italic"
            android:typeface="sans" />
    </LinearLayout>

    <!--Login-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblLoginZirkapp"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                android:textColor="@color/accent_color"
                android:gravity="center_vertical|center_horizontal" />-->

            <EditText
                android:id="@+id/txtUserEmail"
                style="@style/custom_edit_text"
                android:hint="@string/lblEmail"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/txtUserSignUp"
                style="@style/custom_edit_text"
                android:hint="@string/lblUser"
                android:imeOptions="actionNext"
                android:inputType="textVisiblePassword|textNoSuggestions" />

            <EditText
                android:id="@+id/txtPassSignUp1"
                style="@style/custom_edit_text"
                android:ems="10"
                android:hint="@string/lblPassword"
                android:imeOptions="actionNext"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/txtPassSignUp2"
                style="@style/custom_edit_text"
                android:ems="10"
                android:hint="@string/lblPasswordConfirm"
                android:imeOptions="actionNext"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSingUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionSend"
                    android:text="@string/lblSingUp"
                    android:textAllCaps="true"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
