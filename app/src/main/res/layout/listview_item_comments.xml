<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp">

    <com.ecp.gsy.dcs.zirkapp.app.util.images.RoundedImageView
        android:id="@+id/imgCommentAvatarItem"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_user_male"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop"
        android:layout_gravity="top"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="18dp">

            <TextView
                android:id="@+id/lblCommentNombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textStyle="bold"
                android:textColor="@color/secondary_text_color"
                />

            <TextView
                android:id="@+id/lblCommentUserName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/lblCommentNombreUsuario"
                android:layout_toEndOf="@id/lblCommentNombreUsuario"
                android:textColor="@color/divider_color"
                android:textSize="11dp"
                android:gravity="center_vertical"
                android:text="User" />

            <!--<TextView
                android:id="@+id/lblNumComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/accent_color"
                android:textStyle="bold"
                android:text="#1"
                />-->

        </RelativeLayout>

        <TextView
            android:id="@+id/lblCommentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/accent_color"
            />

        <!--Iconos y datos-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="16dp">

            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_icon_location"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/lblDistance"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="0m"
                android:layout_marginLeft="1dp"
                android:gravity="center_vertical"
                style="@style/mini_text" /> -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_icon_review_comment"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/lblNumComment"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_marginLeft="1dp"
                android:gravity="center_vertical"
                style="@style/mini_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_icon_time"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txtCommentTiempo"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="1h"
                android:layout_marginLeft="1dp"
                android:gravity="center_vertical"
                style="@style/mini_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

