<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="@string/lblSocialNetwork"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/default_primary_color" />

    <!-- Card Redes Sociales -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|left"
                android:text="Facebook:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_text_color" />

            <TextView
                android:id="@+id/txtAccountFace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="facebook_user"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/primary_text_color" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|left"
                android:text="Twitter:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_text_color" />


            <TextView
                android:id="@+id/txtAccountTwit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="twiiter_user"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/primary_text_color" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|left"
                android:text="Google+:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_text_color" />

            <TextView
                android:id="@+id/txtAccountGoo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="google_user"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/primary_text_color" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|left"
                android:text="Instagram:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_text_color" />

            <TextView
                android:id="@+id/txtAccountInst"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="instagram_user"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/primary_text_color" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|left"
                android:text="Skype:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_text_color" />

            <TextView
                android:id="@+id/txtAccountSkyp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="skype_user"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/primary_text_color" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|left"
                android:text="LinkedIn:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_text_color" />

            <TextView
                android:id="@+id/txtAccountLink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="linked_user"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/primary_text_color" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>