<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_primary_color"
    android:minHeight="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgCommentAvatarItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user_male" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="18dp">

            <TextView
                android:id="@+id/lblCommentNombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="@color/secondary_text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblCommentUserName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/lblCommentNombreUsuario"
                android:layout_toRightOf="@id/lblCommentNombreUsuario"
                android:gravity="center_vertical"
                android:text="User"
                android:textColor="@color/divider_color"
                android:textSize="11dp" />

            <!--<TextView
                android:id="@+id/lblNumComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/accent_color"
                android:textStyle="bold"
                android:text="#1"
                />-->

        </RelativeLayout>

        <TextView
            android:id="@+id/lblCommentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:textColor="@color/accent_color" />

        <!--Iconos y datos-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="16dp">

            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_icon_location"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/lblDistance"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="0m"
                android:layout_marginLeft="1dp"
                android:gravity="center_vertical"
                style="@style/mini_text" /> -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:src="@drawable/ic_icon_review_comment" />

            <TextView
                android:id="@+id/lblNumComment"
                style="@style/mini_text"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center_vertical"
                android:text="0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:src="@drawable/ic_icon_time" />

            <TextView
                android:id="@+id/txtCommentTiempo"
                style="@style/mini_text"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center_vertical"
                android:text="1h" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgQuoteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:padding="12dp"
        android:src="@drawable/ic_icon_answer" />

</LinearLayout>

