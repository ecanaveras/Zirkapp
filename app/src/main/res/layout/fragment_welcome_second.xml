<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/splash_zirkapp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:id="@+id/LyInfoDistancia"
        android:padding="10dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_user_male"
            android:layout_marginRight="4dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lblWelcomeMsg1"
            android:id="@+id/textView3"
            android:singleLine="false"
            android:textStyle="italic"
            android:typeface="sans"
            android:gravity="fill_horizontal|left|fill_vertical"
            android:textColor="@color/text_primary_color"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:padding="10dp"
        android:layout_below="@+id/LyInfoDistancia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lblWelcomeMsg2"
            android:id="@+id/textView"
            android:singleLine="false"
            android:textStyle="italic"
            android:typeface="sans"
            android:layout_weight="1"
            android:gravity="right|fill_vertical"
            android:textColor="@color/text_primary_color"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imgAvatarW2"
            android:src="@drawable/ic_map"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:padding="10dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_location"
            android:layout_marginRight="4dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lblWelcomeMsg3"
            android:singleLine="false"
            android:textStyle="italic"
            android:typeface="sans"
            android:gravity="fill_horizontal|left|fill_vertical"
            android:textColor="@color/text_primary_color"/>
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/lblStart"
        android:id="@+id/btnWelcome2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        style="@style/My.Button" />


</RelativeLayout>
