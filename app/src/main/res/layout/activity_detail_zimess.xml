<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="60dp"
    android:orientation="vertical">

    <include layout="@layout/component_toolbar" />

    <!--Zimess-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:background="@color/text_primary_color"
        android:orientation="vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <!--Avatar y Distancia-->
            <LinearLayout
                android:layout_width="62dp"
                android:layout_height="65dp"
                android:orientation="vertical"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgAvatarItem"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_user_male"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="30dip"
                    app:riv_border_width="0.2dp"
                    app:riv_border_color="@color/divider_color_2"
                    app:riv_oval="true" />

                <!--<TextView
                    android:id="@+id/lblDistance"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    style="@style/mini_text" />-->

            </LinearLayout>

            <!--Datos del perfil, y Zimess-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp">

                    <TextView
                        android:id="@+id/lblNombreUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_color"
                        android:gravity="bottom"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/lblUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/divider_color"
                        android:textSize="14dp"
                        android:gravity="bottom"
                        android:layout_marginBottom="1px" />

                </LinearLayout>

                <TextView
                    android:id="@+id/lblZimess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="sans-serif"
                    android:text="body"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="16dp" />


                <!--Otros datos-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_icon_location"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/lblDistance"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="0m"
                        android:layout_marginLeft="1dp"
                        android:gravity="center_vertical"
                        style="@style/mini_text" />

                    <ImageView
                        android:id="@+id/imgComment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_icon_response"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/lblCantComments"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:layout_marginLeft="1dp"
                        android:gravity="center_vertical"
                        style="@style/mini_text" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_icon_time"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/txtTiempo"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="1h"
                        android:layout_marginLeft="1dp"
                        android:gravity="center_vertical"
                        style="@style/mini_text" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!--   <TextView
           style="@style/mini_text"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="@string/lblResponse" />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/arrow_down_float" />


    <!--Comentarios-->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/listZComments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stackFromBottom="true"
                android:transcriptMode="alwaysScroll" />

            <ProgressBar
                android:id="@+id/progressLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>


    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <EditText
            android:id="@+id/txtZimessComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:singleLine="true"
            android:hint="@string/msgReply" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btnSendZimessComment"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/lblSend"
            android:background="@color/default_primary_color" />
    </LinearLayout>


</LinearLayout>
