<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemNoti"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_primary_color"
    android:minHeight="70dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_margin="6dp"
            android:src="@drawable/ic_user_male" />


        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="top"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/ic_bg_number_white_24dp"
            android:backgroundTint="@color/very_dark_gray" />

        <ImageView
            android:id="@+id/imgIconNoti"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="top"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_favorite_white_24dp"
            android:scaleType="fitCenter" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblSummaryNoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gasy ha comentado tu Zimess"
            android:textColor="@color/dark_primary_color" />

        <TextView
            android:id="@+id/lblDetailNoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:singleLine="false"
            android:text="I am Zirkapp, i like Zirkapp, yeah!"
            android:textColor="@color/very_dark_gray"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:gravity="center_vertical"
                android:src="@drawable/ic_icon_time"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lblCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17/04/2015 3:45 am"
                android:textSize="@dimen/mini_text"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>