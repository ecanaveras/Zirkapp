<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutItemNoti"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_primary_color"
    android:minHeight="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgIconNoti"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_icon_review_comment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblSummaryNoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Zimess] Nuevo comentario de Gasy:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblDetailNoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="Gracias por el favor, me quedÃ© esperando, pense que eras una persona seria!" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:gravity="center_vertical"
                android:src="@drawable/ic_icon_review_comment" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:gravity="center_vertical"
                android:src="@drawable/ic_icon_time"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lblCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17/04/2015 3:45 am"
                android:textSize="@dimen/mini_text"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

