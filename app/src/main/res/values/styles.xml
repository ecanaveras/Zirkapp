<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:popupMenuStyle">@style/popup_menu</item>-->
        <item name="android:textAppearanceSmallPopupMenu">@style/small_text</item>
        <item name="android:textAppearanceLargePopupMenu">@style/small_text</item>
    </style>

    <style name="line_divider_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color_2</item>
    </style>

    <style name="line_divider_v">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="box_shadow">
        <item name="android:background">@drawable/border_shadow</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="box_no_shadow">
        <item name="android:background">@drawable/border_noshadow</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="mini_text">
        <item name="android:textColor">#A5A5A8</item>
        <item name="android:textSize">@dimen/mini_text</item>
    </style>

    <style name="small_text">
        <item name="android:textColor">#A5A5A8</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="medium_text">
        <item name="android:textColor">#A5A5A8</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="message_text_large">
        <item name="android:textColor">#2F2F30</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="message_text_medium">
        <item name="android:textColor">#3E3E40</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="background_view">
        <item name="android:background">#EDEDF2</item>
    </style>

    <style name="popup_menu">
        <item name="android:background">@drawable/popup_menu</item>
    </style>

    <style name="toggle_style">
        <item name="android:background">@drawable/toggle_button_bgc</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
        <item name="android:layout_width">75px</item>
        <item name="android:layout_height">34px</item>
    </style>

</resources>
