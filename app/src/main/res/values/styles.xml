<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorPrimary">@color/default_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>

        <item name="windowActionBar">false</item>
        <item name="android:colorButtonNormal">@color/default_primary_color</item>

        <!--<item name="alertDialogProTheme">@style/Theme.AlertDialogPro.Material.Light</item>-->
        <item name="alertDialogProTheme">@style/FlavoredMaterialLight</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="My.Button" parent="android:style/Widget.Material.Button">
        <item name="android:background">@drawable/raised_button_background</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="FlavoredMaterialLight" parent="Theme.AlertDialogPro.Material.Light">
        <item name="adpButtonBarPositiveButtonStyle">@style/ButtonDialog</item>
        <item name="adpButtonBarNegativeButtonStyle">@style/ButtonDialog</item>
    </style>

    <style name="ButtonDialog" parent="Widget.AlertDialogPro.Material.Light.Button">
        <item name="android:textColor">@color/dark_primary_color</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/raised_button_background</item>
    </style>


    <style name="line_divider_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color_2</item>
    </style>

    <style name="line_divider_v">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="box_shadow">
        <item name="android:background">@drawable/border_shadow</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="box_no_shadow">
        <item name="android:background">@drawable/border_noshadow</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="mini_text">
        <item name="android:textColor">#A5A5A8</item>
        <item name="android:textSize">@dimen/mini_text</item>
    </style>

    <style name="small_text">
        <item name="android:textColor">#A5A5A8</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="medium_text">
        <item name="android:textColor">#A5A5A8</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="message_text_large">
        <item name="android:textColor">#2F2F30</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="message_text_medium">
        <item name="android:textColor">#3E3E40</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="background_view">
        <item name="android:background">#EDEDF2</item>
    </style>

    <style name="popup_menu">
        <item name="android:background">@drawable/popup_menu</item>
    </style>

</resources>
