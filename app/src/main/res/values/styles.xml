<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Box">
        <item name="android:background">@drawable/border_shadow</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="MiniText">
        <item name="android:textColor">#A5A5A8</item>
        <item name="android:textSize">@dimen/Mini.Text</item>
    </style>

    <style name="MediumText">
        <item name="android:textColor">#A5A5A8</item>
        <item name="android:textSize">@dimen/Medium.Text</item>
    </style>

    <style name="MessageTextLarge">
        <item name="android:textColor">#2F2F30</item>
        <item name="android:textSize">@dimen/Message.Text.Large</item>
    </style>

    <style name="MessageTextMedium">
        <item name="android:textColor">#3E3E40</item>
        <item name="android:textSize">@dimen/Message.Text.Medium</item>
    </style>

    <style name="BackgroundView">
        <item name="android:background">#EDEDF2</item>
    </style>

</resources>
